<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:id="@+id/tvRegister"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="45dp"
        android:textColor="#363636"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Sign up to see photos and videos from your friends."
        android:textColor="@color/cardview_dark_background"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/etCuID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Coventry ID "
        android:textSize="20sp"
        android:inputType="number"
        android:layout_marginTop="40dp"
        android:height="50dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/etFName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        android:textSize="20sp"
        android:height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/etLName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/etUName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Passwors"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:inputType="textPassword"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <TextView
        android:id="@+id/tvBatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Batch"
        android:layout_marginTop="20dp"
        />
    <Spinner
        android:id="@+id/spbatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>

    <Button
        android:id="@+id/btnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:width="160dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:layout_marginLeft="120dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Already have an account?"
            />

        <TextView
            android:id="@+id/tvlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="25sp"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:text="Login"
            />


    </LinearLayout>

</LinearLayout>